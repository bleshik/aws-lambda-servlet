{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Simple example of usage of aws-lambda-servlet",
    "Parameters": {
        "JarBucket": {
            "Default": "bleshik",
            "Description": "The S3 bucket where Jar located",
            "Type": "String"
        },
        "JarKey": {
            "Default": "simple-1.0-jar-with-dependencies.jar",
            "Description": "Location of the jar in the bucket (an S3 key)",
            "Type": "String"
        }
    },
    "Resources": {
        "Api": {
            "Properties": {
                "BinaryMediaTypes": [
                    "application~1octet-stream",
                    "image~1png",
                    "image~1svg+xml",
                    "image~1*",
                    "image~1jpeg",
                    "image~1gif"
                ],
                "Description": {
                    "Fn::Sub": " API Gateway for ${JarKey}"
                },
                "Name": {
                    "Fn::Sub": " API for ${JarKey}"
                }
            },
            "Type": "AWS::ApiGateway::RestApi"
        },
        "ApiDeployment": {
            "DependsOn": [
                "ProxyANY"
            ],
            "Properties": {
                "Description": {
                    "Fn::Sub": " API for ${JarKey}"
                },
                "RestApiId": {
                    "Ref": "Api"
                },
                "StageName": "api"
            },
            "Type": "AWS::ApiGateway::Deployment"
        },
        "ApiGatewayAccount": {
            "Properties": {
                "CloudWatchRoleArn": {
                    "Fn::GetAtt": [
                        "ApiGatewayCloudWatchLogsRole",
                        "Arn"
                    ]
                }
            },
            "Type": "AWS::ApiGateway::Account"
        },
        "ApiGatewayCloudWatchLogsRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "apigateway.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:DescribeLogGroups",
                                        "logs:DescribeLogStreams",
                                        "logs:PutLogEvents",
                                        "logs:GetLogEvents",
                                        "logs:FilterLogEvents"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "ApiGatewayLogsPolicy"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        },
        "ApiLambda": {
            "DependsOn": [
                "ApiLambdaRole"
            ],
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "JarBucket"
                    },
                    "S3Key": {
                        "Ref": "JarKey"
                    }
                },
                "Handler": "com.github.bleshik.example.ServletAdapter",
                "MemorySize": 3008,
                "Role": {
                    "Fn::GetAtt": [
                        "ApiLambdaRole",
                        "Arn"
                    ]
                },
                "Runtime": "java8",
                "Timeout": 60
            },
            "Type": "AWS::Lambda::Function"
        },
        "ApiLambdaPermission": {
            "DependsOn": [
                "ApiLambda"
            ],
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "ApiLambda"
                },
                "Principal": "lambda.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "ApiLambda",
                        "Arn"
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "ApiLambdaRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Path": "/"
            },
            "Type": "AWS::IAM::Role"
        },
        "LambdaPermission": {
            "DependsOn": [
                "ApiLambda"
            ],
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "ApiLambda",
                        "Arn"
                    ]
                },
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:execute-api:",
                            {
                                "Ref": "AWS::Region"
                            },
                            ":",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":",
                            {
                                "Ref": "Api"
                            },
                            "/*"
                        ]
                    ]
                }
            },
            "Type": "AWS::Lambda::Permission"
        },
        "ProxyANY": {
            "DependsOn": [
                "Api",
                "ApiLambda",
                "ProxyResource"
            ],
            "Properties": {
                "AuthorizationType": "NONE",
                "HttpMethod": "ANY",
                "Integration": {
                    "IntegrationHttpMethod": "POST",
                    "Type": "AWS_PROXY",
                    "Uri": {
                        "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${ApiLambda.Arn}/invocations"
                    }
                },
                "ResourceId": {
                    "Ref": "ProxyResource"
                },
                "RestApiId": {
                    "Ref": "Api"
                }
            },
            "Type": "AWS::ApiGateway::Method"
        },
        "ProxyResource": {
            "DependsOn": [
                "Api"
            ],
            "Properties": {
                "ParentId": {
                    "Fn::GetAtt": [
                        "Api",
                        "RootResourceId"
                    ]
                },
                "PathPart": "{proxy+}",
                "RestApiId": {
                    "Ref": "Api"
                }
            },
            "Type": "AWS::ApiGateway::Resource"
        }
    }
}
